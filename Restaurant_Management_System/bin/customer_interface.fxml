<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CustomerController" spacing="10" alignment="CENTER">
    <TextField fx:id="nameField" promptText="Enter Your Name" />
    <TextField fx:id="contactField" promptText="Enter Your Contact" />
    <Button fx:id="reserveButton" text="Reserve Table" onMouseClicked="#handleReservation" />
    <ListView fx:id="menuList" prefHeight="200" prefWidth="200" />
</VBox>
